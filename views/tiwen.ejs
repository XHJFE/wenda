	var invitedList = []

	/**
	 * 初始化富文本编辑器
	 */
	function initEditor(wangEditor) {
		w = new wangEditor('#editor')
		w.customConfig = {
			menus: [
				'bold',
				'italic',
				'underline',
				'undo',
				'image', 
			],
			zIndex: 50,
			uploadImgServer: 'http://bms.xhj.com/file/upload',
			uploadImgShowBase64: true,
			showLinkImg: false,
			uploadFileName: 'file',
			uploadImgHooks: {
				fail: function(xhr, editor, result) {
					editor.uploadImg.insertLinkImg(result)
				}
			},
			customAlert: function (info) {
				return
			},
			onchange: function() {
				var text = w.txt.text()
				var html = w.txt.html()
				if (text.length > 300) {
					console.log(html)
				}
			}
		}
		w.create()
	}

	/**
	 * 获取经纪人列表
	 */
	function getBelongerList(name) {
		$.ajax({
			url: '/getBelongerList',
			data: {
				page: page,
				name: name
			},
			method: 'POST',
			success: function(data) {
				page++;
				if (data.status == 1) {
					var res = data.data;
					var content = res.content;
					var htmlStr = '';
					if (res.last) {
						page = 0;
					}
					$.each(content, function(index, item) {
						var disabled = '';
						for (var i = 0, len = invitedList.length; i < len; i++) {
							if (item.belongerId === invitedList[i].inviteeId) {
								disabled = 'disabled';
								break;
							}
						}
						htmlStr += '<div class="zuoda_list" data-id="'+item.belongerId+'">' +
							'<span><img src="'+ item.portrait +'"/></span>' +
							'<p class="name"><span>'+ item.name +'</span><i>'+ item.levelName +'</i></p>'+
							'<p class="quyu">'+ (item.fwlp && item.fwlp.length > 0 ? item.fwlp.join('、') : '--') +'</p>' +
							'<a data-id="'+item.belongerId+'" href="javascript:void(0);" class="invitate" onclick="invitation(\''+item.belongerId+'\', \''+item.name+'\', '+index+')" '+ disabled +'><span>邀请作答</span></a>'+
						'</div>';
					})
					$('#agent').html(htmlStr);
				} else {
					var d = dialog({
						content: data.msg,
						quickClose: true
					});
					d.showModal();
					setTimeout(function () {
						d.close().remove();
					}, 1000);
				}
			}
		})
	}

	/**
	 * 通过名字搜索经纪人列表
	 */
	function searchBelongerList() {
		page = 0;
		var name = $('#agentValue').val();
		if (name) {
			$('.hp_btn').hide();
		} else {
			$('.hp_btn').show();
		}
		getBelongerList(name);
	}

	/**
	 * 邀请作答
	 * @param {String} id 当前被邀请人员
	 * @param {String} name 当前被邀请人名字
	 */
	function invitation(id, name, index) {
		var item = $('.invitate').eq(index);
		if (item.attr('disabled')) {
			return;
		}
		invitedList.push({
			inviteeId: id,
			inviteeName: name
		});
		item.attr('disabled', true);
		var html = '<span data-id="'+ id +'">'+ name +'<i class="removeInvitate"></i></span>';
		$('.jinfjiren_number').append(html);
		
	}

	/**
	 * 提交回答
	 */
	function submit() {
		var title = $('#title').val();
		var content = w.txt.html();
		if (!title) {
			var d = dialog({
				title: '温馨提示',
				content: '请输入问题标题'
			});
			d.showModal();
			return
		}
		if (!w.txt.text()) {
			var d = dialog({
				title: '温馨提示',
				content: '请输入问题内容'
			});
			d.showModal();
			return
		}

		var optionNodes = $('.form-control-chosen').get(0).selectedOptions
		var tags = []
		$.each(optionNodes, function(index, item) {
			tags.push($(item).val()) 
		})
		$.ajax({
			url: '/askQuestions',
			method: 'POST',
			data: {
				problemTitle: title,
				problemContent: content,
				problemLabelId: tags.join(','),
				listProblemInvited: JSON.stringify(invitedList)
			},
			success: function(data) {
				if (data.status == 1) {
					window.location.href = '/wentiku'
				} else if (data.status == '506') {
					login.login(function() {
						var d = dialog({
							content: '登录成功',
							quickClose: true
						});
						d.showModal();
						setTimeout(function () {
							d.close().remove();
						}, 1000);
						submit()
					})
				} else {
					var d = dialog({
						content: data.msg,
						quickClose: true
					});
					d.showModal();
					setTimeout(function () {
						d.close().remove();
					}, 1000);
				}
			}
		})

	}
</script>

